#view_container{
    padding-left: 16px;
    padding-right: 16px;
}

view#login_box{
    text-align: center;
    width: 100%;
    padding: 16px 0;
}

image.logo{
    width: 52px;
    height: 52px;
    border-radius: 50%;
    margin-bottom: 32px;
    box-shadow: 1px 1px 3px 1px #E0E0E0;
}

view.fields{
    display: flex;
    flex-direction: column;
    align-items: center;
    padding-bottom: 16px;
}

input{
    box-sizing: border-box;
    width: 280px;
    height: 36px;
    border: 1px solid #E0E0E0;
    text-align: left;
    padding: 6px 16px;
    font-size: 13px;
    border-radius: 4px;
    margin-bottom: 12px;
}

button{
    box-sizing: border-box;
    width: 280px;
    height: 36px;
    font-size: 14px;
    line-height: 36px;
}
