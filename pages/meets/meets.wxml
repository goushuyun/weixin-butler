<view>
    <!-- 选择学校和店铺 -->
    <view id="store_scho">
        <view class="schools">
            <image class="icon" src="../../images/location.png"></image>
            <text class="label">上海应用技术大学（奉贤校区）</text>
        </view>
        <view class="stores">
            <text class="label">切换店铺</text>
            <image class="icon" src="../../images/shop.png"></image>
        </view>
    </view>

    <!-- 选择预约状态、排序 -->
    <view id="meet_type">
        <view class="order_way">
            <text>按预约时间排序</text>
            <image class="icon" src="../../images/order.png"></image>
        </view>

        <view class="meet_types">
            <text class="active">预约中</text>
            <text>暂搁置</text>
            <text>已完成</text>
        </view>
    </view>

    <!-- meets list -->
    <scroll-view scroll-y class="meets">
        <view class="meet_item">

        </view>
    </scroll-view>

</view>
