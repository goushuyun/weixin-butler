.wraper{
  background-color: white;
  margin-top: 10px;
  padding: 0 15px;
}
.header{
  display: flex;
  justify-content: space-between;
  height: 44px;
  line-height: 44px;
  font-size: 16px;
  border-bottom: 1px solid #E8E8E8;
}
.header .title{
  width: 80px;
  font-weight: bold;
  color: #333;
}
.header .link{
  padding: 0 15px;
  color: #1591E4;
  overflow: hidden;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  word-break: break-all;
  white-space: pre-wrap;
}
.header .active {
  text-align: right;
  width: 40px;
  flex-grow: 0;
  color: #217AC0;
  font-size: 14px;
}
.school_area {
  padding: 10px;
  font-size: 14px;
}
.time_area {
  padding: 10px;
  margin-bottom: 10px;
  font-size: 14px;
}
.school {
  line-height: 30px;
}
.item {
  height: 30px;
  line-height: 30px;
  padding: 2px 0;
  justify-content: space-between;
}
.picker {
  margin: 0 10px;
  box-sizing: border-box;
  height: 30px;
  line-height: 30px;
  border: 1px solid #E0E0E0;
  text-align: left;
  padding: 0 10px;
  border-radius: 10px;
  font-size: 14px;
}
.textarea {
  box-sizing: border-box;
  width: 100%;
  padding: 10px;
  font-size: 14px;
  line-height: 30px;
}
