<scroll-view class="body" scroll-y="true">
  <!-- 收书码 -->
  <view class="wraper">
    <view class="header" style="border-bottom: 0">
      <text class="title">收书链接</text>
      <view>
        <text selectable class="link">{{qrcode_url}}</text>
      </view>
      <text class="active" bindtap="copyUrl">复制</text>
    </view>
  </view>
  <!-- 收书学校 -->
  <view class="wraper">
    <view class="header">
      <text class="title">收书学校</text>
      <text class="active" bindtap="goToSchoolList">修改</text>
    </view>
    <view class="school_area">
      <block wx:for="{{schools}}">
        <view wx:if="{{item.is_recyling}}" class="school">{{item.name}}</view>
      </block>
    </view>
  </view>
  <!-- 收书说明 -->
  <view class="wraper">
    <view class="header">
      <text class="title">收书说明</text>
      <text class="active" bindtap="goToExplanation">修改</text>
    </view>
    <view class="textarea">{{summary}}</view>
  </view>
  <!-- 收书时间 -->
  <view class="wraper">
    <view class="header">
      <text class="title">预约时间</text>
      <text class="active" bindtap="goToReservation">修改</text>
    </view>
    <view class="time_area">
      <block wx:for="{{appoint_times}}">
        <view wx:if="{{item.is_work}}" class="item">
          <view class="desp">{{item.week_ch}}</view>
          <view class="picker">{{item.start_at}}：00 - {{item.end_at}}：00</view>
        </view>
      </block>
    </view>
  </view>

</scroll-view>

<view class="footer">
  <view class="meets" bindtap="goToMeets">
    <view>
      <image src="/images/home.png"></image>
      <view class="text" style="color:#888888">首页</view>
    </view>
  </view>
  <view class="setting">
    <view>
      <image src="/images/setting_selected.png"></image>
      <view class="text" style="color:#1581D9">设置</view>
    </view>
  </view>
</view>
