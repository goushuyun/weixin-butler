<scroll-view class="body" scroll-y="true">
    <!-- new recyling code -->
    <view class="recycling_code">
        <view class="store_info">
            <image class="logo" src="http://wx.qlogo.cn/mmopen/yibogbWqZEhvAWBApaU8aIqLZhkBufavIIR8dRxvW64qcPy53YHlLHSCl7ylfCZZ0JbIBibkX5fwlqb1O3x2kCl8jVIsibmdRNw/0"></image>
            <text class="store_name">第999家店铺</text>
        </view>

        <view class="view_code" bindtap="show_qrcode">
            <image class="qrcode" src="../../images/QR_code.png"></image>
            <text>收书二维码</text>
        </view>
    </view>

