<view class="body">
  <form bindsubmit="formSubmit">
    <view class="area">
      <view class="item">
        <view>收书说明</view>
      </view>
      <view class="remark">
          <textarea name="remark" maxlength="50" placeholder="请输入收书说明" value="{{remark}}"/>
      </view>
    </view>
    <view class="footer">
      <button class="cancel" formType="reset">取消</button>
      <button class="confirm" formType="submit">保存</button>
    </view>
  </form>
</view>
