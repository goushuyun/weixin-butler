.desp {
  padding: 0 10px;
  font-size: 14px;
}
.picker {
  margin: 0 10px;
  box-sizing: border-box;
  height: 32px;
  line-height: 32px;
  border: 1px solid #E0E0E0;
  text-align: left;
  padding: 0 10px;
  border-radius: 10px;
  font-size: 14px;
}
.add_btn {
  margin-top: 10px;
  width: 100%;
  height: 44px;
  line-height: 44px;
  text-align: center;
  background-color: #FFFFFF;
  color: #1581D9;
  font-weight: bold;
}
.item {
  justify-content: space-between;
}
.result_area {
  height: 50px;
  line-height: 50px;
  text-align: center;
}
#pv_model {
  position: fixed;
  z-index: 2;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;
}
#pv_model image {
  width: 100%;
  height: 100%
}
.pv_area {
  position: fixed;
  height: 280px;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 3;
  background-color: #FFFFFF;
}
.pv_title {
  display: flex;
  justify-content: space-between;
  background-color: #FBF9FE;
  color: #586C94;
  font-size: 14px;
  padding: 0 15px;
  height: 40px;
  line-height: 40px;
  box-sizing: border-box;
}
.pv_column {
  font-size: 15px;
  line-height: 34px;
  text-align: center;
  font-weight: bold;
}
