<view class="body">
  <view class="area">
    <view class="item">
      <view>请勾选收书时间</view>
    </view>
    <view class="item" wx:for="{{times}}">
      <checkbox value="{{item.id}}" checked="{{item.checked}}"/>
      <view class="desp">{{item.value}}</view>
      <picker mode="selector" range="{{time_area}}" value="{{item.start_time}}" bindchange="bindStartTimeChange">
        <view class="picker">{{item.start_time}}:00</view>
      </picker>
      <text>-</text>
      <picker mode="selector" range="{{time_area}}" value="{{item.end_time}}" bindchange="bindEndTimeChange">
        <view class="picker">{{item.end_time}}:00</view>
      </picker>
    </view>
  </view>
  <view class="footer">
    <button class="cancel" formType="reset">取消</button>
    <button class="confirm" formType="submit">保存</button>
  </view>
</view>
